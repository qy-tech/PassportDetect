<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FingerprintActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="-4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/textDevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备 : "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="80sp" />

                    <Spinner
                        android:id="@+id/spnDevice"
                        android:layout_width="200dp"
                        android:layout_height="100dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textBaudrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="波特率: "
                        android:textSize="80sp" />

                    <Spinner
                        android:id="@+id/spnBaudrate"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:entries="@array/baud_rate" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnOpenDevice"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="打开串口"
                            android:textSize="50sp" />
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/textTemplateNo"
                                android:layout_width="150dp"
                                android:layout_height="87dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:text="ID :"
                                android:textSize="60sp" />

                            <EditText
                                android:id="@+id/editUserID"
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                android:layout_weight="0.8"
                                android:background="#6666"
                                android:editable="true"
                                android:inputType="number"
                                android:text="1" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnEnroll"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="录制指纹"
                            android:textSize="50sp" />

                        <Button
                            android:id="@+id/btnIdentify"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="识别指纹"
                            android:textSize="50sp" />

                        <Button
                            android:id="@+id/btnCloseDevice"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="关闭串口"
                            android:textSize="50sp" />

                        <Button
                            android:id="@+id/btnVerify"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="证实指纹"
                            android:textSize="50sp" />

                        <Button
                            android:id="@+id/btnGetEnrollCount"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="指纹数量"
                            android:textSize="50sp" />

                        <Button
                            android:id="@+id/btnRemoveAll"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="清除所有"
                            android:textSize="50sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.45"
                    android:text="请打开设备!"
                    android:textSize="15sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>